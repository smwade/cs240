<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_screen.LoginFragment"
    android:clickable="true"
    android:background="#6c3f51ae">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="0dp"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="#a7add3">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#a7add3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:id="@+id/userName"
            android:layout_alignBaseline="@+id/userNameEditText"
            android:layout_alignBottom="@+id/userNameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#131c5e" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameEditText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userName"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#131c5e"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#a7add3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/password"
            android:layout_alignBaseline="@+id/userNameEditText"
            android:layout_alignBottom="@+id/userNameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#131c5e" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userName"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="#131c5e" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#a7add3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Host:"
            android:id="@+id/serverHost"
            android:layout_alignBaseline="@+id/userNameEditText"
            android:layout_alignBottom="@+id/userNameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#131c5e" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serverHostEditText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userName"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#131c5e" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"
        android:background="#a7add3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Port:"
            android:id="@+id/serverPort"
            android:layout_alignBaseline="@+id/userNameEditText"
            android:layout_alignBottom="@+id/userNameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#131c5e" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serverPortEditText"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/userName"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#131c5e" />
    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:id="@+id/signInButton"
            android:layout_gravity="center_horizontal"
            android:background="#3f4ba1"
            android:textColor="#ffffff"
            android:backgroundTint="#3f4ba1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXISTING USER"
            android:id="@+id/existingUserButton"
            android:layout_gravity="center_horizontal"
            android:background="#3f4ba1"
            android:textColor="#ffffff"
            android:backgroundTint="#3f4ba1"
            android:padding="5dp"
            android:layout_marginTop="25dp" />

    </LinearLayout>

</FrameLayout>
